 <p><%= link_to "Add a New Restaurant", "/restaurants/new" %></p>

 <table class="table table-striped">
  <tr>
    <th>Restaurant Name</th>
    <th>Address</th>
    <th>Rating</th>
    <th>Cuisine Type</th>
    <th>Neighborhood</th>
    <th>Date Visited</th>
    <th>Status</th>
    <th>Notes</th>
    <th></th>
  </tr>

  <% @restaurants.each do |restaurant| %>
    <tr>
      <td><%= link_to restaurant.restaurant_name, restaurant_url(restaurant.id) %></td>
      <td><%= restaurant.address %></td>
      <td><%= restaurant.rating%></td>
      <td><%= restaurant.cuisine_id%></td>
      <td><%= restaurant.neighborhood_id%></td>
      <td><%= restaurant.date_visited%></td>
      <td><%= restaurant.status%></td>
      <td><%= restaurant.notes%></td>
      <td><%= link_to "Edit...", "/restaurants/#{restaurant.id}/edit" %></td>
      <td><%= link_to "Delete", "/restaurants/#{restaurant.id}", :method => 'delete' %></td>
    <% end %>
  </table>
